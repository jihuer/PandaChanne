<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/live_re"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%h"
        app:layout_widthPercent="100%w"
        android:background="@color/home_line"
        >
        <Button
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/bt_livesend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/home_line"
            android:text="@string/bt_send"
            />
        <EditText
            android:layout_margin="2dp"
            android:id="@+id/ed_live"
            android:background="@drawable/ed_bg"
            android:layout_toLeftOf="@id/bt_livesend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/ed_textcolor"
            android:textSize="13sp"
            android:hint="添加评论.."
            />
    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.zhy.android.percent.support.PercentLinearLayout>