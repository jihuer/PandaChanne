<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/panda_background"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentFrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%w"
        app:layout_widthPercent="100%w"
        >

        <io.vov.vitamio.widget.VideoView
            android:id="@+id/videoplayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%"
            />
      <TextView
          android:id="@+id/tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="开始"
          android:layout_gravity="bottom"
          />
    </com.zhy.android.percent.support.PercentFrameLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/home_line"
        app:layout_heightPercent="15%w"
        app:layout_widthPercent="100%w"
        >
        <TextView
            android:id="@+id/tv_livetitle"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="100%"
            android:text="[正在直播]成都基地高清精切线路"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="100%"

            >
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="簡介"
                />
            <CheckBox
                android:id="@+id/checkbox_live"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/text_unfolded_hide"
                />
        </RelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/etv"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_widthPercent="100%w"
                app:layout_heightPercent="32%w"
                android:background="@color/home_line"
                />
            <android.support.design.widget.TabLayout
                android:layout_marginTop="2dp"
                android:background="@color/home_line"
                android:id="@+id/tab_live"
                app:tabSelectedTextColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="13%w"
                app:layout_widthPercent="100%w"
                />
         <!--  -->
            <com.example.a12710.pandachannel.view.MViewpager
                android:id="@+id/pager_live"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="57%w"
                app:layout_widthPercent="100%w"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>