<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.14">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="93dp"
                android:layout_height="88dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:src="@drawable/fcb" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/facebook"
                android:layout_alignStart="@+id/facebook"
                android:layout_below="@+id/facebook"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="Facebook"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/twitter"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/facebook" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/twitter"
                android:layout_alignRight="@+id/twitter"
                android:layout_below="@+id/twitter"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:text="Twitter"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/weibo"
                android:layout_width="93dp"
                android:layout_height="88dp"
                app:srcCompat="@drawable/sinawebo"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:textColor="#000"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_below="@+id/weibo"
                android:layout_alignLeft="@+id/weibo"
                android:layout_alignStart="@+id/weibo" />

            <ImageView
                android:id="@+id/weixin"
                android:layout_width="93dp"
                android:layout_height="88dp"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/wechat"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/facebook"
                android:layout_alignStart="@+id/facebook" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3"
                android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/weixin"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:text="微信"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/pengyouquan"
                android:layout_width="93dp"
                android:layout_height="88dp"
                android:layout_alignLeft="@+id/twitter"
                android:layout_alignStart="@+id/twitter"
                android:layout_alignTop="@+id/weixin"
                app:srcCompat="@drawable/moments" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_below="@+id/pengyouquan"
                android:text="朋友圈"
                android:textColor="#000" />

            <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#e8e8e8"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#000" />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
