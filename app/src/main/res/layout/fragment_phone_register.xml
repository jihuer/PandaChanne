<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="海外用户暂不支持手机号注册，您可以使用邮箱注册"
        android:textColor="@color/colorPrimaryDark"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="95%w" />

    <EditText
        android:textSize="15dp"
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/info_et"
        android:hint="账号：请输入手机账号"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="87%w" />
    <TextView
        android:id="@+id/phone_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"

        android:layout_marginLeft="25dp"
        android:text=""
        />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="100%w">

        <EditText
            android:textSize="15dp"
            android:id="@+id/tupian_yanzhang"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/info_et"
            android:hint="请输入图片验证码"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="56%w"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_butt"
            android:text="获取验证码"
            android:textColor="#ffffff"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="25%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:id="@+id/phone_tpyz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"

        android:layout_marginLeft="25dp"
        android:text=""
        />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="100%w">

        <EditText
            android:textSize="15dp"
            android:id="@+id/duanxin_yanzhang"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/info_et"
            android:hint="请输入收到的验证码"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="56%w"

            />

        <Button
            android:id="@+id/phone_but"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_butt"
            android:text="获取验证码"
            android:textColor="#ffffff"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="25%w"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:id="@+id/phone_dxyz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"

        android:layout_marginLeft="25dp"
        android:text=""
        />
    <EditText
        android:textSize="15dp"
        android:id="@+id/register_pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/info_et"
        android:hint="请输入密码"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="87%w" />
    <TextView
        android:id="@+id/phone_tsmm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"

        android:layout_marginLeft="25dp"
        android:text=""
        />
    <CheckBox
        android:textSize="15dp"
        android:id="@+id/phone_treaty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="我已阅读并同意《央视网网络服务使用协议》"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="90%w"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/phone_gouxuan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"

        android:layout_marginLeft="25dp"
        android:text=""
        />
    <Button
        android:id="@+id/phone_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="90%w"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_butt"
        android:text="注册"
        android:textColor="#ffffff"
        />
</com.zhy.android.percent.support.PercentLinearLayout>